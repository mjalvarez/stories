.row
  .col-md-6.col-md-offset-3
    .signin-wrapper
      = form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: 'off' }) do |f|
        .form-input-wrapper
          = f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: 'off', onfocus: "this.value = this.value;"
        .form-input-wrapper
          = f.password_field :password, autocomplete: "off", placeholder: "Password"
        = f.submit "Log in", class: "button green-inner-button"
        - if devise_mapping.rememberable?
          .field.remember-me
            = f.check_box :remember_me
            = f.label :remember_me
        = link_to "Sign up", new_user_registration_path, class: 'button green-border-button pull-right'
