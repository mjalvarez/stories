.response-panel
  .post-metadata
    = avatar_for response.user, size: 40
    .post-info
      = link_to response.username, response.user
      %br/
      %small
        = time_ago_in_words(response.created_at)
        ago
  .main-body
    %p.response-body= remove_javascript(response.body).html_safe
  .response-stats.clearfix
    .pull-left{:id => "response_#{response.id}_likes"}
      = render partial: 'responses/likes', locals: { response: response }
    .pull-right{:id => "response_#{response.id}_bookmarks"}
      = render partial: 'responses/bookmarks', locals: { response: response }
