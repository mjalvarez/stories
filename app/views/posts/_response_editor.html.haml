.inline-editor{"data-behavior" => "response-editor"}
  .editor-metadata
    = avatar_for(current_user, size: 40)
    %strong.editor-username= current_user.username
  = form_for [post, Response.new], remote: true, html: { class: 'editor-form' } do |f|
    .form-group
      = f.text_area :body, class: "medium-editable response-body", id: 'editor-body'
    = f.submit "Publish", class: 'button green-inner-button'
    %button.button.green-border-button.cancel-button{"data-behavior" => "editor-cancel"} Cancel
